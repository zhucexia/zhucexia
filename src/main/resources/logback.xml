<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<!-- 控制台输出日志 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>[%d{yyyy-MM-dd HH:mm:ss} %-5p] [%t] {%c:%L}-%m%n</pattern>
		</layout>
	</appender>
	
	<!-- 文件输出日志-->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/tmp/logs/zhucexia.log</file>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- fileNamePattern如果配置相对路径，同file一个规则 -->
			<fileNamePattern>/tmp/logs/zhucexia.%d{yyyy-MM-dd}.gz</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder>
			<Pattern>[%d{yyyy-MM-dd HH:mm:ss} %-5p] [%t] %X{username} %X{queryUrl} [%C:%L]-%m%n</Pattern>
		</encoder>
	</appender>
	
	<!-- 异步日志，不支持类名（%C） 行号（%L）这些输出 -->
	<appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
	    <appender-ref ref="FILE" />
	</appender>

	<logger name="com.leslie.beauty" additivity="false" level="info">
		<appender-ref ref="STDOUT" />
	</logger>
	
	<logger name="org.springframework" additivity="false" level="warn">
		<appender-ref ref="STDOUT" />
	</logger>

	<!-- root 默认日志配置 -->
	<root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</root>
</configuration> 