	<!-- 查询用用的某个订单的信息 -->
	<select id="getOrder" resultMap="BaseResultMap">
		select <include refid="Base_Column_List" />
		from sale_order where 1=1 and id=#{id}
	</select>
	
	 <insert id="bulidOrder"  parameterType="com.keji50.zhucexia.dao.po.SalaOrderPo" >
		insert into sale_order(order_no,customer_id,customer_name,order_money,address,mobile,email,zip_code,payment_id,payment_code
		,payment_name,order_state,remark,orderstate_time)
	    values(CONCAT(DATE_FORMAT(now(), '%Y%m%d%h%i%s'),LPAD(LAST_INSERT_ID()+1, 11, '0')),#{customerid},#{customername},#{ordermoney},#{address},#{mobile},#{email},#{zipcode},#{paymentid},#{paymentcode
		},#{paymentname},#{orderstate},#{remark},#{orderstatetime})
		<selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
  			select LAST_INSERT_ID() 
  		</selectKey>
	</insert> 
